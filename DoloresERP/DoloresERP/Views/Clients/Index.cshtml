@model IEnumerable<DoloresERP.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h2>Clientes</h2>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Endereco)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Dt_nasc)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Endereco)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Dt_nasc)
                            </td>
                            <td>



                                <a asp-action="Edit" asp-route-id="@item.ID">Editar</a> | 
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info btn-circle btn-sm">
                                    <i class="fas fa-info-circle"></i>
                                </a> | 
                                <a asp-action="Delete" asp-route-id="@item.ID"class="btn btn-danger btn-circle btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


<p>
    <a asp-action="Create" class="btn btn-primary btn-icon-split">
        <span class="text">CADASTRAR NOVO</span>
    </a>
</p>
